{% extends 'base.html.twig' %}

{% block title %}Mes projets{% endblock %}

{% block body %}
    <h1 class="mt-5">Mes projets</h1>

    <div class="mx-auto d-flex justify-content-center w-50">
    <a href="{{ path('project_new') }}" class="btn btn-add">Ajouter un projet</a>
    </div>

    <div class="container-fluid card-project">
    <div class="row">
    {% for project in projects %}
    <div class="col-sm-12 col-md-6 col-lg-4">
    <div class="card mb-5 " style="width: 100%; height: 41rem">
        <img class="card-img-top" src="/build/{{project.poster}}" alt="Photo du projet" width="20%">
        <div class="card-body projects">
            <h5 class="card-title">{{ project.name | capitalize }}</h5>
            <hr>
            <p class="card-text mt-3">{{ project.description }}</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Dur√©e : {{ project.duration }}</li>
                <li class="list-group-item">Client : {{ project.client }}</li>
                <li class="list-group-item"> Langages :{% for language in project.languages %} {{ language.name }}  {% endfor %}</li>
            </ul>
            <div class="d-flex flex-row justify-content-around mt-4">
            <a href="{{ path('project_edit', {'id' : project.id })}}" class="btn btn-modifier">Modifier</a>
            {% include 'project/_delete_form.html.twig' %}
            </div>
        </div>
    </div>
        </div>
    {% endfor %}
    </div>
    </div>
{% endblock %}